    "lucide-react": "^0.295.0",
    "tailwind-merge": "^2.1.0"
  },
  "build": {
    "icon": "public/logo512.png",
    "productName": "React and Electron App",
    "files": [
      "build/**/*",
      "main.js"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {},
    "linux": {},
    "mac": {}
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
